<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Client" table="client">
    <indexes>
      <index name="fk_Client_Adresse1_idx" columns="Adresse_idAdresse"/>
      <index name="fk_Client_Etat1_idx" columns="etatId"/>
    </indexes>
    <id name="idclient" type="integer" column="idClient"/>
    <id name="adresseadresse" association-key="true"/>
    <field name="civilite" type="string" column="civilite" length="45" nullable="false"/>
    <field name="prenom" type="string" column="prenom" length="45" nullable="false"/>
    <field name="nom" type="string" column="nom" length="45" nullable="false"/>
    <field name="newsletter" type="boolean" column="newsletter" nullable="false"/>
    <field name="premium" type="boolean" column="premium" nullable="false"/>
    <field name="telephone" type="string" column="telephone" length="45" nullable="true"/>
    <field name="email" type="string" column="email" length="70" nullable="false"/>
    <field name="mdp" type="string" column="mdp" length="45" nullable="false"/>
    <field name="datedenaissance" type="datetime" column="dateDeNaissance" nullable="false"/>
    <field name="datedecreation" type="datetime" column="dateDeCreation" nullable="false"/>
    <field name="datedemodification" type="datetime" column="dateDeModification" nullable="true"/>
    <one-to-one field="adresseadresse" target-entity="Adresse">
      <join-columns>
        <join-column name="Adresse_idAdresse" referenced-column-name="idAdresse"/>
      </join-columns>
    </one-to-one>
    <many-to-one field="etatid" target-entity="Etat">
      <join-columns>
        <join-column name="etatId" referenced-column-name="idEtat"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
